<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    app:cardElevation="8dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvBoardIdx"
            style="@style/TextTitleBlackTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            tools:text="754444" />

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/tvBoardIdx"
            tools:text="인권/성평등"
            style="@style/TextLightBlueTheme"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvBoardIdx"
            style="@style/TextBlackTheme"
            tools:text="글제목 청와대 청원게시판도 RSS를 해달라 fuck!" />


        <TextView
            android:id="@+id/tvThumbnailContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            style="@style/TextBlackTheme"
            tools:text="글제목 청와대 청원게시판도 RSS를 해달라 fuck!\nkkslsk kisk"
            android:visibility="gone"
            />


        <TextView
            android:id="@+id/tvBoardTerm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvThumbnailContent"
            style="@style/TextBlackTheme"
            tools:text="12.07.01 ~ 12.08.09"/>

        <TextView
            android:id="@+id/tvNumberOfJoinedPeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_below="@id/tvThumbnailContent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/tvBoardTerm"

            tools:text="44명"
            style="@style/TextBlackTheme"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>
