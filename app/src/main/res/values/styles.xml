<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="TextCommonTheme">

        <item name="android:ellipsize">marquee</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <style name="TextTitleBlackTheme" parent="TextCommonTheme">
        <item name="android:textColor">#111</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBlackTheme" parent="TextCommonTheme">
        <item name="android:textColor">#111</item>
        <item name="android:textSize">13sp</item>

    </style>

    <style name="TextLightBlueTheme" parent="TextCommonTheme">
        <item name="android:textColor">#FF599fff</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="ButtonLightBlueTheme">


        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">FF599fff</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:padding">@dimen/default_padding</item>

    </style>
</resources>
